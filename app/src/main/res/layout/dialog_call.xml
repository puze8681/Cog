<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_gravity="center"
    android:gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="320dp"
    android:background="#ffffff"
    android:padding="16dp"
    android:elevation="8dp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp">
        <TextView
            android:id="@+id/text_date_dialog_call"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:text="2020.01.01"
            android:textColor="#000000"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/button_dialog_call"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="16sp"
            android:textColor="#007e4d"
            android:textStyle="bold"
            android:lineSpacingExtra="2sp"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="닫기" />
    </RelativeLayout>
    <TextView
        android:id="@+id/text_name_dialog_call"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentLeft="true"
        android:gravity="center|left"
        android:text="홍길동"
        android:textColor="#000000"
        android:textSize="24sp" />
    <TextView
        android:id="@+id/text_number_dialog_call"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentLeft="true"
        android:gravity="center|left"
        android:text="010-1234-1234"
        android:textColor="#000000"
        android:textSize="20sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp">

        <TextView
            android:id="@+id/text_money_dialog_call"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:text="전체 금액 : 357,000"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp">
        <TextView
            android:id="@+id/text_pay_dialog_call"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:text="납입 금액 : 257,000"
            android:textColor="#8C000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/text_count_dialog_call"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="4회"
            android:textColor="#8C000000"
            android:textSize="18sp" />
    </RelativeLayout>
</LinearLayout>