<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:elevation="8dp"
    android:gravity="center"
    android:background="#fff"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/text_name_dialog_call"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="8dp"
        android:gravity="center|left"
        android:text="홍길동"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_number_dialog_call"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="8dp"
        android:gravity="center|left"
        android:text="010-1234-1234"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/text_money_dialog_call"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="대출금액: 2000000원"
            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/text_pay_dialog_call"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="납입횟수: 99번(150000원)"
            android:textColor="#000000"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/text_unpaid_dialog_call"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="미납: 2000000원"
            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/text_loan_count_dialog_call"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="대출횟수: 99번(150000원)"
            android:textColor="#000000"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/text_first_loan_date_dialog_call"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:text="첫대출: 2020.01.01"
        android:textColor="#000000"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/text_loan_date_dialog_call"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:text="대출: 2020.01.01\n2020.02.02"
        android:textColor="#000000"
        android:textSize="14sp" />

    <CalendarView
        android:id="@+id/calendar_dialog_call"
        android:background="#273149"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusedMonthDateColor="#EC5656"
        android:contextClickable="false"
        android:maxDate="12/31/2023"
        android:minDate="01/01/2020"
        android:selectedWeekBackgroundColor="#ffff00"
        android:showWeekNumber="false"
        android:unfocusedMonthDateColor="#0000ff"
        android:weekSeparatorLineColor="#00ff00" />

    <TextView
        android:id="@+id/text_payer_dialog_call"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:text="입금자명 :"
        android:textColor="#000000"
        android:textSize="14sp" />
</LinearLayout>