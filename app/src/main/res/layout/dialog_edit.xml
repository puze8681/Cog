<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_gravity="center"
    android:gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="280dp"
    android:background="#ffffff"
    android:elevation="8dp"
    android:layout_height="wrap_content">
    <TextView
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="23dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:text="장부 수정"/>
    <EditText
        android:id="@+id/edit_number_dialog_edit"
        android:hint="수정할 전화번호를 입력해주세요."
        android:inputType="number"
        android:textColorHint="#808080"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#000000"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/edit_name_dialog_edit"
        android:hint="수정할 이름을 입력해주세요."
        android:textColorHint="#808080"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#000000"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/edit_money_dialog_edit"
        android:hint="수정할 전체 금액을 입력해주세요."
        android:inputType="number"
        android:textColorHint="#808080"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#000000"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/edit_pay_dialog_edit"
        android:hint="수정할 납입 금액을 입력해주세요."
        android:inputType="number"
        android:textColorHint="#808080"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#000000"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/edit_count_dialog_edit"
        android:hint="수정할 납입 횟수를 입력해주세요."
        android:inputType="number"
        android:textColorHint="#808080"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#000000"
        android:textStyle="bold"/>
    <LinearLayout
        android:layout_marginTop="36dp"
        android:layout_marginBottom="8dp"
        android:layout_gravity="right"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="36dp">
        <TextView
            android:id="@+id/button_dialog_edit_cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="11sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:lineSpacingExtra="2sp"
            android:gravity="center"
            android:text="취소" />
        <TextView
            android:id="@+id/button_dialog_edit"
            android:layout_marginStart="21dp"
            android:layout_marginEnd="19dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="11sp"
            android:textColor="#007e4d"
            android:textStyle="bold"
            android:lineSpacingExtra="2sp"
            android:gravity="center"
            android:text="확인" />
    </LinearLayout>
</LinearLayout>